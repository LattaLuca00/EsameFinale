<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="2023-03-20-create_table_cinema-001" author="LL">
        <comment>CREATE TABLE CINEMA</comment>
        <createTable tableName="cinema">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_cinema"/>
            </column>
            <column name="idSalaCinematografica" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_sale"
                             references="salacinematografica(id)"/>
            </column>

        </createTable>
        <rollback>
            <dropTable tableName="cinema"/>
        </rollback>
    </changeSet>

</databaseChangeLog>